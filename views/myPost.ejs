<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-800 text-white">
    <div class="w-full min-h-screen p-10">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-3xl font-bold">My Posts</h1>
            <div class="flex gap-2">
                <a href="/profile" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 rounded">
                    Back to Profile
                </a>
                <a href="/allposts" class="bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 rounded">
                    All Posts
                </a>
            </div>
        </div>
        <div class="flex flex-col gap-4">
            <% posts.reverse().forEach(post => { %>
                <div class="bg-zinc-700 rounded-lg shadow-lg p-6 w-[20%] relative">
                    <!-- Conditionally render the edit button if the post is by the logged-in user -->
                    <% if (post.user._id.toString() === user._id.toString()) { %>
                        <a href="/edit/post/<%= post._id %>" class="absolute top-2 right-2 p-1 bg-green-500 rounded-full hover:bg-green-400 text-white text-xs font-bold">
                            Edit
                        </a>
                    <% } %>
                    
                    <h2 class="text-xl font-bold mb-2"><%= post.title %></h2>
                    <p class="mb-4"><%= post.content %></p>
                    <form action="/delete/post/<%= post._id %>" method="post">
                        <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
